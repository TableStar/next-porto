---
import { Icon } from 'astro-icon/components';
---

<section class="py-16 px-6 border-t border-border">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6 text-text-muted">
      <span class="text-accent">$</span> ./list-skills.sh
    </div>

    <h2 class="text-3xl font-semibold mb-8">
      What I <span class="text-accent">Do</span>
    </h2>

    <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
      {[
        { name: 'PHP', icon: 'mdi:language-php' },
        { name: 'TypeScript', icon: 'mdi:language-typescript' },
        { name: 'Golang', icon: 'mdi:language-go' },
        { name: 'Tailwind', icon: 'mdi:tailwind' },
        { name: 'React', icon: 'mdi:react' }
      ].map(skill => (
        <div class="border border-border p-6 text-center hover:border-blue transition-colors duration-200 flex flex-col items-center">
          <Icon name={skill.icon} size={48} class="mb-2" />
          <div class="text-sm">{skill.name}</div>
        </div>
      ))}
    </div>
  </div>
</section>