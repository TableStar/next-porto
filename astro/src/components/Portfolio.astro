---
import project1 from "../assets/proj1.png";
import Image from "astro/components/Image.astro";

const projects = [
  {
    title: "Weather Report",
    desc: "A Weather forecast website built with Next.js and TypeScript. Implemented features for checking weather in current location and searched locations, integrating data from OpenWeatherMap API.",
    devStack: "Next.JS, Tailwind CSS",
    src: project1,
    link: "https://weather.tableworks.my.id",
    git: "https://github.com/TableStar/weather-report-app",
  },
];
---

<section class="py-16 px-6 border-t border-border">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6 text-text-muted">
      <span class="text-accent">$</span> cat projects.json
    </div>

    <h2 class="text-3xl font-semibold mb-8">
      Selected <span class="text-accent">Projects</span>
    </h2>

    {
      projects.map((project, i) => (
        <div class="border border-border p-6 hover:border-blue transition-colors duration-200 mb-6">
          <div class="flex flex-col md:flex-row gap-6">
            <div class="w-full md:w-1/3 aspect-video">
              <Image
                src={project.src}
                alt={project.title}
                loading={"eager"}
                class="w-full h-full object-cover border border-border"
              />
            </div>
            <div class="flex-1">
              <h3 class="text-2xl font-semibold mb-4 text-accent">
                {project.title}
              </h3>
              <p class="text-text-muted mb-4">{project.desc}</p>
              <div class="flex flex-wrap gap-2">
                {project.devStack.split(", ").map((tech) => (
                  <span class="border border-border text-blue px-2 py-1 text-sm">
                    {tech}
                  </span>
                ))}
              </div>
              <div class="flex gap-4 mt-4">
                <a href={project.link} target="_blank" class="px-4 py-2 bg-accent text-bg hover:bg-accent-hover transition-colors duration-200 inline-block">Link</a>
                <a href={project.git} target="_blank" class="px-4 py-2 bg-accent text-bg hover:bg-accent-hover transition-colors duration-200 inline-block">GitHub</a>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
